{
  "name": "github-class-template-hugo",
  "version": "1.0.0",
  "description": "Hugo configuration and dependencies for GitHub Class Template Repository framework",
  "private": true,
  "scripts": {
    "dev": "hugo server --bind 0.0.0.0 --disableFastRender --navigateToChanged",
    "build": "hugo --minify --gc",
    "build:dev": "hugo --buildDrafts --buildFuture",
    "clean": "rm -rf public resources",
    "lint:css": "stylelint 'assets/css/**/*.css'",
    "lint:html": "htmlhint 'public/**/*.html'",
    "test": "npm run build && npm run lint:css",
    "preview": "hugo server --environment production --minify"
  },
  "dependencies": {
    "katex": "^0.16.11",
    "mathjax": "^3.2.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "htmlhint": "^1.1.4",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "prettier": "^3.4.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sonder-art/class_template.git"
  },
  "keywords": [
    "hugo",
    "education",
    "class-template",
    "framework",
    "static-site-generator"
  ],
  "author": "Framework Team",
  "license": "CC-BY-4.0"
} 